{
  "include": ["examples/**/*", "src/**/*"],
  "compilerOptions": {
    "strict": false,
    "outDir": "build",
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "plugins": [{"name": "typescript-plugin-css-modules"}]
  }
}
